# Environment Configuration
# NODE_ENV=development
NODE_ENV=production

# Database URLs  
USERS_DATABASE_URL=postgresql://username:password@your-database-host:5432/users_db?sslmode=require

CAMPAIGN_DATABASE_URL=postgresql://username:password@your-database-host:5432/campaign_db?sslmode=require

OPERATIONS_DATABASE_URL=postgresql://username:password@your-database-host:5432/operations_db?sslmode=require

